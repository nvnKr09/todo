<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
      }

      :root {
        --welcomeText: #333333;
        --blue: #564ff2;
        --skyblue: #5bf7db;
      }

      .main {
        height: 100dvh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
      }

      .form {
        width: 380px;
        background: white;
        border-radius: 8px;
        box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0.1);
        padding: 30px 30px;
        color: var(--welcomeText);
        z-index: 1;
      }

      .form > p {
        margin-bottom: 5px;
        font-size: 14px;
      }

      .form > h1 {
        margin-bottom: 12px;
      }

      form label {
        font-size: 14px;
        font-weight: 500;
      }

      .form input {
        outline: none;
        padding-inline: 4px;
        font-size: 14px;
        width: 100%;
        height: 32px;
        border-radius: 6px;
        border: 1px solid #dedede;
        margin-block: 5px;
      }

      .forgot-password{
        color:var(--blue);
        font-size: 14px !important;
        cursor: pointer;
        text-align: end;
      }
      .forgot-password:active{
        text-decoration: underline;
      }
      .form button {
        width: 100%;
        margin-top: 1rem;
        border: none;
        color: white;
        font-weight: 800;
        line-height: 3;
        border-radius: 6px;
        background: linear-gradient(180deg, #625bf7 0%, #463eea 100%);
      }

      .form button:hover {
        background: linear-gradient(180deg, #463eea 0%, #625bf7 100%);
      }

      .warning {
        text-align: center;
        margin-top: 1rem;
        color: var(--blue);
        font-weight: 700;
      }

      .signup-text {
        z-index: 1;
      }

      .signup-text form {
        display: flex;
        gap: 0.5rem;
      }
      .signin-btn {
        border: none;
        background: none;
        color: var(--blue);
        cursor: pointer;
      }

      .signin-btn:hover {
        text-decoration: underline;
      }

      /* bg design */
      .design {
        position: absolute;
        height: 100%;
        width: 100%;
        overflow: hidden;
      }

      .line {
        position: absolute;
        top: 50%;
        left: 0%;
        height: 150%;
        width: 100%;
        transform: skewY(20deg);
        border-top: 8px solid var(--skyblue);
      }

      @media screen and (max-width: 426px) {
        .form {
          width: 80%;
        }

        .form > h1 {
          font-size: 20px;
        }

        .line {
          top: 50%;
          left: 0;
          width: 100%;
          height: 100%;
          transform: skewY(20deg);
          /* transform-origin: top left; */
        }
      }
    </style>
  </head>

  <body>
    <section class="main">
      <div class="design">
        <div class="line"></div>
      </div>
      <form class="form" action='/login' method="POST">
        <form>
          <label for="loginId">Email or Username</label>
          <input
            type="text"
            name="loginId"
            id="loginId"
            required
          />

          <label for="password"> Password</label>
          <input
            type="password"
            name="password"
            id="password"
            required
          />

          <button id="submitBtn">Reset Password</button>
        </form>
      </form>
    </section>
  </body>
</html>
